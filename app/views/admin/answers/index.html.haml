%table
  %tr
    %th Question
    %th Field
  - for q in @questions
    - if q.field_name=="text_field"
      %tr
        %td= q.question_name
        %td= text_field_tag q.question_name
    - elsif q.field_name=="check_box_tag"
      %tr
        %td= q.question_name
        %td= check_box_tag q.question_name, value = q.question_name, checked = false, options = {}
    - elsif q.field_name=="radio_button_tag"
      %tr
        %td= q.question_name
        %td= radio_button_tag  q.question_name , :checked=>false
    - else
      %tr
        %td= q.question_name
        %td= select_tag q.question_name, value = nil, options = {}
